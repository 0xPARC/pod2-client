{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "POD Client",
  "version": "0.1.2",
  "identifier": "org.0xparc.pod2",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "POD Client",
        "width": 800,
        "height": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true,
        "trafficLightPosition": {
          "x": 12,
          "y": 16
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "description": "POD2 Client - A desktop application for managing cryptographic PODs",
      "args": [
        {
          "name": "config",
          "description": "Path to configuration file",
          "takesValue": true
        },
        {
          "name": "set",
          "description": "Override config value using dot notation (e.g., network.document_server=localhost:3000)",
          "takesValue": true,
          "multiple": true
        }
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": ["podnet"]
      }
    }
  }
}
