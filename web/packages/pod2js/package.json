{
  "type": "module",
  "name": "@pod2/pod2js",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "exports": {
    ".": {
      "import": {
        "@pod2/source": "./src/index.ts",
        "types": "./dist/types/pod2.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "@pod2/source": "./src/index.ts",
        "types": "./dist/types/pod2.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "pnpm gen-types && tsdown --outDir dist --entry src/index.ts --format esm --format cjs --dts",
    "postinstall": "pnpm gen-types",
    "gen-types": " mkdir -p dist/types; json2ts --no-additionalProperties src/schemas.json > src/types/pod2.d.ts"
  },
