    "ajv": "^8.17.1"
  },
  "devDependencies": {
    "@pod2/typescript-config": "workspace:*",
    "ajv-cli": "^5.0.0",
    "json-schema-to-typescript": "^15.0.4",
    "tsdown": "^0.12.9",
    "tsx": "^4.20.3"
  }
}
